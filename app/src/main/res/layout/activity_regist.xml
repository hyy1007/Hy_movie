<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bei"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/member_activity_login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_marginRight="40dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginTop="5dp"
                android:src="@mipmap/register_icon_name_default_hdpi" />

            <EditText
                android:id="@+id/ed_register_name"
                android:layout_width="@dimen/dp_280"
                android:layout_height="40dp"
                android:background="@null"
                android:ems="11"
                android:hint="昵称"
                android:imeOptions="actionNext"
                android:paddingLeft="@dimen/dp_40"
                android:textColor="#ffff"
                android:textColorHint="#eeeeee" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#ffffff" />

        <RelativeLayout
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginTop="5dp"
                android:src="@mipmap/register_icon_phone_default_hdpi" />

            <EditText
                android:id="@+id/ed_register_phone"
                android:layout_width="@dimen/dp_280"
                android:layout_height="40dp"
                android:background="@null"
                android:ems="11"
                android:hint="手机号"
                android:imeOptions="actionNext"
                android:paddingLeft="@dimen/dp_40"
                android:textColor="#ffff"
                android:textColorHint="#eeeeee" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#ffffff" />

        <RelativeLayout
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginTop="5dp"
                android:src="@mipmap/register_icon_lock_default_hdpi" />

            <EditText
                android:id="@+id/ed_register_psw"
                android:layout_width="@dimen/dp_280"
                android:layout_height="40dp"
                android:background="@null"
                android:ems="11"
                android:hint="密码"
                android:imeOptions="actionNext"
                android:paddingLeft="@dimen/dp_40"
                android:textColor="#ffff"
                android:textColorHint="#eeeeee" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#ffffff" />

        <RelativeLayout
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginTop="5dp"
                android:src="@mipmap/register_icon_lock_default_hdpi" />

            <EditText
                android:id="@+id/ed_register_psw2"
                android:layout_width="@dimen/dp_280"
                android:layout_height="40dp"
                android:background="@null"
                android:ems="11"
                android:hint="确认密码"
                android:imeOptions="actionNext"
                android:paddingLeft="@dimen/dp_40"
                android:textColor="#ffff"
                android:textColorHint="#eeeeee" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#ffffff" />

        <RelativeLayout
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_email_black_24dp" />

            <EditText
                android:id="@+id/ed_register_email"
                android:layout_width="@dimen/dp_280"
                android:layout_height="40dp"
                android:background="@null"
                android:ems="11"
                android:hint="邮箱"
                android:imeOptions="actionNext"
                android:paddingLeft="@dimen/dp_40"
                android:textColor="#ffff"
                android:textColorHint="#eeeeee" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#ffffff" />

        <RelativeLayout
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_date_range_black_24dp" />

            <EditText
                android:id="@+id/ed_register_date"
                android:layout_width="@dimen/dp_280"
                android:layout_height="40dp"
                android:background="@null"
                android:ems="11"
                android:hint="2000-11-27"
                android:imeOptions="actionNext"
                android:paddingLeft="@dimen/dp_40"
                android:textColor="#ffff"
                android:textColorHint="#eeeeee" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#ffffff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:hint="性别"
                android:textColorHint="#ffffff"
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/radio_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/btn_boys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:checked="true"
                    android:text="男"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/btn_girl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="女"
                    android:textColor="#fff" />
            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/btn_regirect_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="短信快速注册"
                android:textColor="#fff" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_register"
            android:layout_width="@dimen/dp_280"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:background="@drawable/login_back"
            android:text="注册"
            android:textColor="#fff"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>