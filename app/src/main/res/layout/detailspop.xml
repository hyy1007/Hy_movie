                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="剧情简介"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_details_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="4"
                    android:text="sdfsdfa"
                    android:textSize="14sp" />
            </LinearLayout>

