<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/movie_bj"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_location_movie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_add_location_black_24dp"
                    android:padding="20dp"
                    android:text="啊啊啊"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_search_movie"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/search_background"
                    android:drawableLeft="@drawable/ic_search_black_24dp"
                    android:paddingLeft="5dp" />
            </RelativeLayout>

            <recycler.coverflow.RecyclerCoverFlow
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_hot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="热门电影"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/img_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="40dp"
                    android:layout_height="5dp"
                    android:layout_below="@id/text_hot"
                    android:background="#840F44" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyc_view_hot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/view1" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="正在热映"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/img_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="40dp"
                    android:layout_height="5dp"
                    android:layout_below="@id/text_now"
                    android:background="#840F44" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyc_view_now"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/view2" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_will"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="即将上映"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/img_will"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="40dp"
                    android:layout_height="5dp"
                    android:layout_below="@id/text_will"
                    android:background="#840F44" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyc_view_will"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/view3" />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

</ScrollView>
