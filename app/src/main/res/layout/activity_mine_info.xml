<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="用户信息"
            />
        <LinearLayout
            android:background="@drawable/mine_back"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_312"
            android:orientation="vertical"
            android:layout_height="@dimen/dp_178">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户头像"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/simp_myinfohead"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="用户昵称"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_username"
                    android:layout_alignParentRight="true"
                    android:text="你的益达"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="用户性别"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_alignParentRight="true"
                    android:text="男"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="出生日期"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_birthdate"
                    android:layout_alignParentRight="true"
                    android:text="2018-02-12"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/mine_back"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_312"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="手机号"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_telephone"
                    android:layout_alignParentRight="true"
                    android:text="12345678901"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="邮箱"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_email"
                    android:layout_alignParentRight="true"
                    android:text="123@163.com"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/mine_back"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_312"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="重置密码"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:id="@+id/img_resetpwd"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        </LinearLayout>
        <Button
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/btn_logout"
            android:background="@drawable/logout_back"
            android:text="退出登录"
            android:textColor="#fff"
            android:textSize="18sp"/>

    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_24"
        android:id="@+id/img_myinfoback"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/com_icon_my_default_hdpi"
        android:layout_marginBottom="@dimen/dp_26"
        />
</RelativeLayout>